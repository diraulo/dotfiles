#thefuck
eval $(thefuck --alias)

# Atom
alias a="atom"
alias ac="atom ."

# Python
alias p='python3'

# eos
alias cleos='docker exec eosio /opt/eosio/bin/cleos --wallet-url http://localhost:8899'
