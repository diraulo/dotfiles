# Unix
alias ls='ls -G'
alias ll='ls -lahG'
alias d='date'
alias ...='cd ../..'
alias h='cd ~'
alias c='clear'

alias hibernate='sudo pm-hibernate'

alias tagrails='ctags -R --exclude=.git --exclude=log --exclude=app/assets --exclude=vendor'

# Git
alias git='hub'

# Ruby, Rails
alias be="bundle exec"

alias rdbc="be rake db:create"
alias rdbd="be rake db:drop"
alias rdbm="be rake db:migrate && be rake db:test:prepare"
alias rdbr="be rake db:rollback"
alias rdbs="be rake db:setup"
alias rg="rails generate"
alias rr="rails runner"
alias rc="rails console"

